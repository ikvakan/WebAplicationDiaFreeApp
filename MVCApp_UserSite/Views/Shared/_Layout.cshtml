
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container mainContainer">
        <nav>
            <div class="row ">
                <div class="col-lg-6 col-md-6 col-sm-12 text-left ">
                    <label id="lblHeaderInof" class="customLabel"></label>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12  text-right   ">

                    <a href="https://www.youtube.com/watch?v=gkqSCaMBERQ&list=PLPf69IGxwfBH7_qrNcN1eP-WuSS5oWLiZ" class="btn btn-primary">[User- model]</a> @*model user !!!!!!*@
                    <a href="https://localhost:44310/LoginPage.aspx" class="btn btn-danger">Odjava</a>
                    
                </div>
            </div>
            <hr style="border: 1px solid #808080" />

            <div class="row ">
                <div class="col-sm-12 col-md-6 text-center">

                    @Html.ActionLink("Odaberi obrok", "Index", "Home", null, new { @class = "btn btn-primary" })

                </div>

                <div class="col-sm-12 col-md-6 col-lg-6 text-center">

                    @Html.ActionLink("Popis obroka", "Index", "Home", null, new { @class = "btn btn-primary" })

                </div>



            </div>
            <hr style="border: 1px solid #808080" />


        </nav>



        <div class="content  justify-content-center">

            @RenderBody()
        </div>

        <hr style="border: 1px solid #808080" />
        <footer>
            <div class="footer text-center ">
                <p>@DateTime.Now.ToShortDateString() | <span style="color:red;">WEB FORMS PROJEKT</span></p>
                <p>REPOSITORY - DIAFREE DATABASE</p>

            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
