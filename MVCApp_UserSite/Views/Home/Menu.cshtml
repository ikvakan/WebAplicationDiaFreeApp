


@{
    ViewBag.Title = "Menu";

    var datum = (List<SelectListItem>)ViewBag.datumi;
}




@using (Html.BeginForm())
{
    <div style="margin-top:25px; height:400px;" class="container jumbotron alert ">
        <h2 class="text-center">Popis spremljenih obroka</h2>
        <hr />
        <div class="row h-50 justify-content-center align-items-center">
            <div class="text-center w-25">
                <label class="form-label" style="font-weight:bold;">Datum</label>
                <div class="form-group   ">
                    @Html.DropDownList("ddlDatumi", datum ,"--odaberi--", new { @class = "form-control " })
                </div>
                <input type="submit" value="Odaberi" class="btn btn-primary w-100" />

            </div>
        </div>
    </div>
}



