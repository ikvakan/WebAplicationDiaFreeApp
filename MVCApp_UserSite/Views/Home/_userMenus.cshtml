@model ClassLibrary.Models.KreiraniObrok



@{



}


<div class="row">
    <div class="col-md-12">
        <table class="table table ">
            @Html.HiddenFor(model => model.IDObrok, new { id = Model.IDObrok })

            <thead class="thead-light">
                <tr>
                    <th>Obrok</th>
                    <th style="width:250px; ">Namirnice</th>
                    <th>Grami</th>
                    <th>Komad</th>
                    <th>Žlica</th>
                    <th>Šalica</th>
                    <th>Tip namirnice</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="padding:10px 0 0 4px; font-weight:bold;" class="text-info">@Html.DisplayFor(model => model.NazivObroka)</td>
                    <td>
                        @foreach (var item in Model.ListaNamirnica)
                        {
                            <table class="table-borderless ">
                                <tr>
                                    <td style="padding:0; ">@Html.DisplayFor(model => item.NazivNamirnice)</td>
                                </tr>
                            </table>
                        }
                    </td>
                    <td>
                        @foreach (var item in Model.ListaNamirnica)
                        {
                            <table class="table-borderless  ">
                                <tr>
                                    <td style="padding:0; ">@Html.DisplayFor(model => item.Grami)</td>
                                </tr>
                            </table>
                        }
                    </td>
                    <td>
                        @foreach (var item in Model.ListaNamirnica)
                        {
                            <table class="table-borderless  ">
                                <tr>
                                    <td style="padding:0; ">@Html.DisplayFor(model => item.Komad)</td>
                                </tr>
                            </table>
                        }
                    </td>
                    <td>
                        @foreach (var item in Model.ListaNamirnica)
                        {
                            <table class="table-borderless  ">
                                <tr>
                                    <td style="padding:0; ">@Html.DisplayFor(model => item.Zlica)</td>
                                </tr>
                            </table>
                        }
                    </td>
                    <td>
                        @foreach (var item in Model.ListaNamirnica)
                        {
                            <table class="table-borderless  ">
                                <tr>
                                    <td style="padding:0; ">@Html.DisplayFor(model => item.Salica)</td>
                                </tr>
                            </table>
                        }
                    </td>
                    <td style="width:150px;">
                        @foreach (var item in Model.ListaNamirnica)
                        {
                            <table class="table-borderless">
                                <tr>
                                    <td align="center" style="padding:0;">@Html.DisplayFor(model => item.TipNamirnice)</td>
                                </tr>
                            </table>
                        }
                    </td>
                </tr>
                <tr>
                    <td colspan="6"></td>
                    <td class="">
                        @Html.ActionLink("Obriši", "DeleteMenu", new { obrokId = Model.IDObrok,date=(string)Session["userDate"] }, new { @class = "btn btn-block btn-danger " })
                    </td>
                </tr>

            </tbody>

        </table>


    </div>
</div>


